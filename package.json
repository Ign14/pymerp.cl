{
  "name": "agendaweb",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:core": "vite",
    "build:core": "tsc && vite build",
    "preview:core": "vite preview",
    "build:minimarket": "node scripts/minimarket/build.cjs",
    "preview:minimarket": "node scripts/minimarket/preview.cjs",
    "build": "npm run build:core && npm run build:minimarket",
    "preview": "node scripts/preview.cjs",
    "preview:prod": "vite preview --port 5173 --strictPort",
    "serve:prod": "npm run build && vite preview --port 5173 --strictPort",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest run",
    "test:ci": "vitest run --coverage",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:chrome": "playwright test --project=chromium",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:flaky": "playwright test --repeat-each=10 --retries=0",
    "test:e2e:report": "playwright show-report",
    "test:e2e:codegen": "playwright codegen http://localhost:5173",
    "test:all": "npm run test && npm run test:e2e",
    "deploy": "npm run build && firebase deploy",
    "deploy:hosting": "npm run build && firebase deploy --only hosting",
    "deploy:firestore": "firebase deploy --only firestore:rules",
    "deploy:storage": "firebase deploy --only storage",
    "verify:secrets": "scripts\\verify-secrets.bat",
    "setup:vercel": "vercel link",
    "deploy:vercel:preview": "vercel",
    "deploy:vercel:prod": "vercel --prod",
    "firebase:download": "powershell -ExecutionPolicy Bypass -File scripts/firebase-download-all.ps1"
  },
  "dependencies": {
    "@react-google-maps/api": "^2.20.3",
    "@sentry/react": "^10.27.0",
    "date-fns": "^4.1.0",
    "firebase": "^12.6.0",
    "framer-motion": "^12.23.25",
    "geofire-common": "^6.0.0",
    "i18next": "^25.7.1",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "lucide-react": "^0.562.0",
    "qrcode.react": "^3.1.0",
    "react": "^19.2.3",
    "react-datepicker": "^7.5.0",
    "react-dom": "^19.2.3",
    "react-ga4": "^2.1.0",
    "react-helmet-async": "^2.0.5",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^16.3.5",
    "react-router-dom": "^6.28.0",
    "web-vitals": "^5.1.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.50.1",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.3.12",
    "@types/react-datepicker": "^7.0.0",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^3.2.4",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.14",
    "firebase-tools": "^15.5.1",
    "jest-axe": "^10.0.0",
    "jsdom": "^25.0.1",
    "postcss": "^8.4.49",
    "tailwindcss": "^3.4.15",
    "typescript": "^5.7.2",
    "vite": "^7.2.4",
    "vite-plugin-pwa": "^1.2.0",
    "vitest": "^3.2.4",
    "workbox-window": "^7.4.0"
  }
}
